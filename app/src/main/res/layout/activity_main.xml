<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agilutiontech.addemo.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context="com.amal.fragments.MainActivity">


        <fragment
            android:layout_height="match_parent"
            android:layout_width="240px"
            class="com.agilutiontech.addemo.DemoFragment"
            android:id="@+id/fragment"/>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.agilutiontech.addemo.Demo2Fragment"
            android:id="@+id/fragment2"/>




    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageViewAd"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom" />

</FrameLayout>
